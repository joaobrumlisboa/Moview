<resources>

    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/purple_500</item>
        <item name="android:textColor">@color/white</item> <!-- Texto branco para contraste -->
    </style>


    <!-- Tema claro -->
    <style name="Theme.Moview" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="android:statusBarColor">@color/purple_500</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorSecondary</item> <!-- Tto no modo claro -->
        <item name="buttonStyle">@style/CustomButton</item>
    </style>

    <!-- Tema escuro -->
    <style name="Theme.Moview.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="android:statusBarColor">@color/purple_500</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item> <!-- Verifique se está correto -->
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="buttonStyle">@style/CustomButton</item>
    </style>


    <style name="AppTheme" parent="Theme.Moview">
        <!-- Você pode adicionar mais personalizações aqui se necessário -->
    </style>

</resources>
